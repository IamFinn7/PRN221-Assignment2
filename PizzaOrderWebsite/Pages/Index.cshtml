@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/css/global.css" />
<link rel="stylesheet" href="~/css/index.css" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
<link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css" />

<div class="home" id="home" style="min-height: 85vh;">
    <div class="image" data-aos="fade-down">
        <img src="~/img/pizzaThumb.png"
             alt="" />
    </div>

    <div class="content" data-aos="fade-up">
        <h3>Delicious Pizzas Just for You</h3>
        <p>
            Celebrate with us or enjoy a pizza night!<br>
            Your satisfaction is our priority!
        </p>
        <a asp-area="" asp-page="/PizzaWeb/Menu" class="btn">Order Now</a>
    </div>
</div>