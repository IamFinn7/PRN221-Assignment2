<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />

<div class="login-container">
    <h1>Login</h1>
    <form method="post" id="login-form" onsubmit="return validateForm()">
        <div class="form-group">
            <label asp-for="Username">Username:</label>
            <input asp-for="Username" type="text" id="username" required />
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <div class="password-wrapper">
                <input asp-for="Password" type="password" id="password" required />
                <button asp-for="Password" type="button" class="toggle-password" onclick="togglePasswordVisibility()">
                    <i class="fas fa-eye" id="eye-icon"></i>
                </button>
            </div>
        </div>
        <button type="submit" class="login-btn">Login</button>
    </form>
    <p>Don't have an account? <a asp-area="" asp-page="/PizzaWeb/Register" class="registerLink">Register here</a></p>
</div>

<script>
    let passwordVisible = false;

    function togglePasswordVisibility() {
        const passwordInput = document.getElementById('password');
        const eyeIcon = document.getElementById('eye-icon');

        if (passwordVisible) {
            passwordInput.setAttribute('type', 'password');
            eyeIcon.classList.remove('fa-eye-slash');
            eyeIcon.classList.add('fa-eye');
            passwordVisible = false;
        } else {
            passwordInput.setAttribute('type', 'text');
            eyeIcon.classList.remove('fa-eye');
            eyeIcon.classList.add('fa-eye-slash');
            passwordVisible = true;
        }
    }

